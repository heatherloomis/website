{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Hugo Development Server",
            "type": "shell",
            "command": "docker run --rm --volume=\"${PWD}:/src\" -it -p 1313:1313 klakegg/hugo:ext serve",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": [],
            "dependsOn": [
                "Install NPM Dependencies"
            ]
        },
        {
            "label": "Install NPM Dependencies",
            "type": "shell",
            "command": "docker run --rm -it -v ${PWD}:/usr/src/app -w /usr/src/app node npm install",
            "options": {
                "cwd": "${workspaceFolder}/themes/original"
            },
            "problemMatcher": []
        }
    ]
}